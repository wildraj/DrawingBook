<div class='login'>
  <h1>Log-In</h1>
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.text_field :username, placeholder: 'Username' %>
    <%= f.password_field :password, placeholder: 'Password' %>
    <%= f.submit "Sign-In" %>
    <% if @message %>
      <p style="color: red; font-size: 1.5em"><%= @message %>
    <% end %>
  <% end %>
  <p>Not a member? <%= link_to "Register", new_user_path %></p>
</div>