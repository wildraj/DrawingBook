<style>
  img {
    width: 300px;
    height: 200px;
    border: 3px solid #000000;
  }
</style>
<br>
<h1>Whiteboard Cloud</h1>
<%= link_to "Log-out", logout_path %><br>
<%= link_to "Draw New Image", action: "new" %>
<div class='images'>
  <% @images.each do |image| %>
    <!-- MAKE CSS!!! -->
    <p>Title: <%= image.title %><p>
    <%= link_to image_tag("/users/#{@user.id}/images/#{image.id}.png", :class => "image"), user_image_path(@user, image) %>
    <br>
    <%= link_to "Edit", edit_user_image_path(@user, image)%>
    <%= link_to "Delete", user_image_path(@user, image), :method => "DELETE" %>
  <% end %>
</div>
